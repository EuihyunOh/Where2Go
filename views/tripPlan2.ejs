<%
//가져와야하는 데이터
//var userID = "";
//var userName="";
//var board ="";
//url로 보낸 key로 검색한 travel보드


//페이지번호(받아올필요없음)
var pageNo=1;
%>



<!DOCTYPE html>
<html lang="ko">
	<head>
		<meta charset = "UTF-8">
		<title>WTG</title>
		<link rel = "stylesheet" href = "./styles/styles.css"/>
		<script>
			function renewContent()
			{
				var CL="";
				var CR="";
				if(pageNo==1)
				{
					CL=board.travelContent1;
					CR=board.travelContent2;
				}
				else if(pageNo==2)
				{
					CL=board.travelContent2;
					CR=board.travelContent3;
				}
				else if(pageNo==3)
				{
					CL=board.travelContent3;
					CR=board.travelContent4;
				}
				else if(pageNo==4)
				{
					CL=board.travelContent4;
					CR=board.travelContent5;
				}
				else if(pageNo==5)
				{
					CL=board.travelContent5;
					CR=board.travelContent6;
				}
				else if(pageNo==6)
				{
					CL=board.travelContent6;
					CR=board.travelContent7;
				}
				else if(pageNo==7)
				{
					CL=board.travelContent7;
					CR=board.travelContent8;
				}
				else if(pageNo==8)
				{
					CL=board.travelContent8;
					CR=board.travelContent9;
				}
				else if(pageNo==9)
				{
					CL=board.travelContent9;
					CR=board.travelContent10;
				}
				else{
					pageNo==1;
					CL=board.travelContent1;
					CR=board.travelContent2;
				}

				document.getElementById("travelContentL").value = CL;
				document.getElementById("travelContentR").value = CR;


			}
			function pageUp() {
				pageNo+=1;
				renewContent();

			}
			function pageDown()
			{
				pageNo-=1;
				renewContent();
			}

		</script>
	</head>
	<body>
		<header>
			<%- include ('./part/header.ejs') %>
		</header>
  		<section>
			<article id = "index1">
				<div id = "upperBoardBorderSolid">
					<%
						//지도들어가는자리.
						//travelMapPos1부터 travelMapPos10까지 받음
					%>
				</div>

				<div id = "mainBoard">
					<table style="width:100%;table-layout:fixed" >
							<thead style ="text-align:center;">
								<tr style = "background-color:#B2CCFF">
									<th width = "10%">나라</th>
									<th width = "20%"><%=board.travelCountry%></th>
									<th width = "10%">제목</th>
									<th width = "60%"><%=board.travelTitle%></th>
								</tr>
								<tr>
									<th width = "10%">출발일</th>
									<th width = "25%"><%=board.travelStartDate%></th>
									<th width = "10%">총여행기간</th>
									<th width = "25%"><%=+board.travelTotalSpanTime%></th>
									<th width = "10%">작성자</th>
									<th width = "20%"><%=board.travelWriter%></th>
								
								</tr>
								<tr style = "background-color:#B2CCFF">
									<th colspan="3"><%=pageNo%>일차</th>
									<th colspan="3"><%=pageNo+1%>일차</th>
								</tr>
							</thead>
							<tbody >
								<td colspan = "3" id="travelContentL"><%=board.travelContent1%></td>
								<td colspan = "3" id="travelContentR"><%=board.travelContent2%></td>
							</tbody>
						</table>
				</div>
														
				<div >
					<%if(pageNo<9){%>
						<button onclick="pageUp()" >다음페이지로</button>
					<%}if(pageNo>1){%>
						<button onclick="pageDown()" >이전페이지로</button>
					<%}if((board.travelWriterID==userID)){%>
						<a onclick = "return confirm('수정하시겠습니까?')" href="./reformTravel?key=<%=board.key%>">수정</a>
						<a onclick = "return confirm('삭제하시겠습니까?')" href="./deleteActionTravel?key=<%=board.key%>">삭제</a>
					<%}%>
				</div>
			</article>
			<article id = "LoginMenu">
				<%- include ('./part/login.ejs')%>
			</article>
		</section>
		<footer>
			<%- include ('./part/footer.ejs') %>
		</footer>
	</body>
</html>
	
	
	
	
	
	
	
	
